@{
}
@model Employee

<div class="container">

    <form asp-controller="Admin" asp-action="@ViewBag.Action">

        <input type="text" class="form-control" id="EmployeeId" name="employeeId" hidden value="@(Model != null ? Model.EmployeeId : "")">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstname">Prénom</label>
                <input type="text" class="form-control" name="firstname" id="firstname" value="@(Model != null ? Model.FirstName : "")">
            </div>
            <div class="form-group col-md-6">
                <label for="lastname">Nom</label>
                <input type="text" class="form-control" id="lastname" name="lastname" value="@(Model != null ?Model.LastName : "")">
            </div>
        </div>
        <div class="form-group">
            <label for="landlinePhone">Téléphone fixe</label>
            <input type="text" class="form-control" id="landlinePhone" placeholder="01 02 03 04 05" name="landlinePhone" value="@(Model != null ? Model.LandlinePhone : "")">
        </div>
        <div class="form-group">
            <label for="mobilePhone">Téléphone mobile</label>
            <input type="text" class="form-control" id="mobilePhone" placeholder="06 30 50 60 30" name="mobilePhone" value="@(Model != null ? Model.MobilePhone :"")">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="aaaa@annu.fr" name="email" value="@(Model != null ? Model.Email : "")">
        </div>

        <div class="form-group">
            <label for="site">Localisation</label>
            <select class="form-control" id="site" name="siteId">
                @foreach (Site s in ViewBag.Sites)
                {
                    if (@Model != null && @s.SiteId == @Model.Site.SiteId)
                    {
                        <option value="@s.SiteId" selected>@s.SiteName</option>
                    }
                    else
                    {
                        <option value="@s.SiteId">@s.SiteName</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="department">Service</label>
            <select class="form-control" id="department" name="departmentId">
                @foreach (Department d in ViewBag.Departments)
                {
                    if (@Model != null && @d.DepartmentId == @Model.Department.DepartmentId)
                    {
                        <option value="@d.DepartmentId" selected>@d.DepartmentName</option>
                    }
                    else
                    {
                        <option value="@d.DepartmentId">@d.DepartmentName</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>
